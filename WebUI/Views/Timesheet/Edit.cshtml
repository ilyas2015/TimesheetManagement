@model WebUI.Models.TsEntryViewModel

@{
    ViewBag.Title = "Edit Timesheet";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TsEntryId)

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalHours, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalHours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalHours, "", new { @class = "text-danger" })
            </div>
        </div>
		if(Model.Weeks!= null && Model.Weeks.Count > 0)
        {
			@Html.Partial("_Weeks", Model.Weeks)
		}
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section scripts {
    @Scripts.Render("~/bundles/bootstrap-datetimepicker")
}

@section styles{
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}

<script>
    jQuery(document).ready(function() {
        jQuery('#StartDate').datetimepicker(
        {
           format: "YYYY-MM-DD",
           sideBySide: true,
           showTodayButton: true
        });

        jQuery('#EndDate').datetimepicker(
        {
            format: "YYYY-MM-DD",
            sideBySide: true,
            showTodayButton: true
        });
    });
</script>